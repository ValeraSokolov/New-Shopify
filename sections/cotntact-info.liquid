{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<div class="image-with-text {% if section.settings.full_width %}image-with-text--full-width{% else %}page-width{% endif %} color-scheme-{{ section.settings.color_scheme }}">
  <div class="image-with-text__grid color-{{ section.settings.color_scheme }} grid grid--gapless grid--1-col grid--2-col-tablet gradient{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="grid__item">
      <div class="image-with-text__media image-with-text__media--{{ section.settings.height }} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d20509.894345337594!2d36.23660336617783!3d50.01628836750675!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4127a1000e0da5b9%3A0x7bc3ddab9336dd55!2z0KbQtdC90YLRgNCw0LvRjNC90YvQuSDQv9Cw0YDQuiDQutGD0LvRjNGC0YPRgNGLINC4INC-0YLQtNGL0YXQsCDQuNC80LXQvdC4INCcLiDQk9C-0YDRjNC60L7Qs9C-!5e0!3m2!1sru!2snl!4v1661432516173!5m2!1sru!2snl" 
            width="600" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
      </div>
    </div>
    <div class="grid__item">
      <div class="image-with-text__content image-with-text__content--{{ section.settings.height }}">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h2 class="image-with-text__heading h1" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
            {%- when 'text' -%}
              <div class="image-with-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.cotntact-info.name",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.cotntact-info.settings.image.label"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.cotntact-info.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.cotntact-info.settings.height.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.cotntact-info.settings.height.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.cotntact-info.settings.height.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "t:sections.cotntact-info.settings.color_scheme.options__1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.cotntact-info.settings.color_scheme.options__2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.cotntact-info.settings.color_scheme.options__3.label"
        },
        {
          "value": "accent-1",
          "label": "t:sections.cotntact-info.settings.color_scheme.options__4.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.cotntact-info.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.cotntact-info.settings.color_scheme.label"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "t:sections.cotntact-info.settings.layout.options__1.label"
        },
        {
          "value": "text_first",
          "label": "t:sections.cotntact-info.settings.layout.options__2.label"
        }
      ],
      "default": "image_first",
      "label": "t:sections.cotntact-info.settings.layout.label",
      "info": "t:sections.cotntact-info.settings.layout.info"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.cotntact-info.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Contact Info",
          "label": "t:sections.cotntact-info.blocks.heading.settings.heading.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.cotntact-info.blocks.text.name",
      "limit": 4,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "t:sections.cotntact-info.blocks.text.settings.text.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.cotntact-info.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
