<link rel="stylesheet" href="{{ 'counter-block.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-counter-block.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'counter-block.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-counter-block.css' | asset_url | stylesheet_tag }}</noscript>

<div class="{% unless section.settings.full_width %}page-width{% endunless %}">
  <div class="counter-text color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} counter-text--full-width{% endif %}">
    <div class="counter__blocks">
      {%- for block in section.blocks -%}
        <div class="heading__box">
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="heading_total" {{ block.shopify_attributes }}>{{ block.settings.heading | escape }}</h2>
          {%- when 'heading' -%}
            <h3 class="heading_text">{{ block.settings.text }}</h3>
        {%- endcase -%}
      </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.counter-block.name",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.counter-block.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.counter-block.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.counter-block.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.counter-block.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.counter-block.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.counter-block.settings.color_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.counter-block.settings.full_width.label"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.counter-block.blocks.heading.name",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Total",
          "label": "t:sections.counter-block.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.counter-block.blocks.heading.settings.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.counter-block.blocks.heading.settings.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.counter-block.blocks.heading.settings.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.counter-block.blocks.heading.settings.heading_size.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Statistics</p>",
          "label": "t:sections.counter-block.blocks.text.settings.text.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.counter-block.presets.name",
      "blocks": [
        {
          "type": "heading"
        }
      ]
    }
  ]
}
{% endschema %}
